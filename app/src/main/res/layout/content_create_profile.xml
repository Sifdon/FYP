<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.stephen.test2.CreateProfileActivity"
    tools:showIn="@layout/activity_create_profile">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/donebutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/NameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/imageView">
    </TextView>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carpenter"
        android:id="@+id/checkBoxCarpenter"
        android:checked="false"
        android:layout_below="@+id/NameID"
        android:layout_alignStart="@+id/NameID" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locksmith"
        android:id="@+id/checkBoxLocksmith"
        android:checked="false"
        android:layout_below="@+id/checkBoxCarpenter"
        android:layout_alignStart="@+id/NameID" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glazer"
        android:id="@+id/checkBoxGlazer"
        android:checked="false"
        android:layout_below="@+id/checkBoxLocksmith"
        android:layout_alignStart="@+id/NameID" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plumber"
        android:id="@+id/checkBoxPlumber"
        android:checked="false"
        android:layout_below="@+id/checkBoxGlazer"
        android:layout_alignStart="@+id/NameID" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electrician"
        android:id="@+id/checkBoxElectrician"
        android:checked="false"
        android:layout_below="@+id/checkBoxMechanic"
        android:layout_alignStart="@+id/NameID" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gardener"
        android:id="@+id/checkBoxGardener"
        android:checked="false"
        android:layout_below="@+id/checkBoxPlumber"
        android:layout_alignStart="@+id/NameID" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mechanic"
        android:id="@+id/checkBoxMechanic"
        android:checked="false"
        android:layout_below="@+id/checkBoxGardener"
        android:layout_alignStart="@+id/NameID" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/donebutton"
        android:layout_toStartOf="@+id/donebutton"
        android:layout_marginEnd="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:text="Phone"
        android:ems="10"
        android:id="@+id/Phone"
        android:layout_below="@+id/checkBoxElectrician"
        android:layout_alignStart="@+id/checkBoxElectrician" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:text="Bio"
        android:ems="10"
        android:id="@+id/Bio"
        android:layout_below="@+id/Phone"
        android:layout_alignStart="@+id/NameID"
        android:layout_marginTop="30dp" />


</RelativeLayout>
